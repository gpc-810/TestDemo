<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".DataCalendarActivity">

    <Button
        android:id="@+id/calendar_select_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日历选择弹窗" />

    <com.demo.test.widget.CalendarSelectView
        android:id="@+id/calendar_select_time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar_select_dialog_btn"
        app:layout_src="com.demo.test.widget.TitleView"

        />

    <Button
        android:id="@+id/calendar_select_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="显示"
        app:layout_constraintTop_toBottomOf="@+id/calendar_select_time_btn" />

    <Button
        android:id="@+id/calendar_select_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="隐藏"
        app:layout_constraintTop_toBottomOf="@+id/calendar_select_show" />


</android.support.constraint.ConstraintLayout>